@model CapstoneV4.Models.DomainModels.CartItem
@{
    ViewData["Title"] = " | Edit Cart";

}

<h1>Edit Cart</h1>
<form asp-controller="Cart" asp-action="Edit" method="post">
    <ul class="list-group mb-2">
        <li class="list-group-item">@Model.Course.CourseName</li>
        <li class="list-group-item">
            <div class="col-1">
                <label>Price:</label>

            </div>
            <div class="col-1">
                @Model.Course.Tuition.ToString("c");
            </div>
        </li>

        <li class="list-group-item">
            <div class="form-row">
                <div class="col-1">
                    <label asp-for="Quantity">Quantity: </label>
                </div>
                <div class="col-1">
                    <select asp-for="Quantity" class="form-control">
                        @for(int i=1; i<=10; i++)
                        {
                            <option>@i</option>
                        }
                    </select>

                </div>
            </div>
        </li>
    </ul>

    <input type="hidden" asp-for="Course.CourseID" />
    <input type="hidden" asp-for="Course.CourseName" />

    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-controller="Cart" asp-action="Index" class="btn btn-warning">Cancel</a>
</form>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
